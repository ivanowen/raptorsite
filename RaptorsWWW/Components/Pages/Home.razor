@page "/"
@layout ComingSoonLayout

<PageTitle>Raptors Soccer - Coming Soon</PageTitle>

<div class="coming-soon-container">
    <div class="coming-soon-content">
        <div class="logo-container">
            <img src="images/raptors-logo.png" alt="Raptors Soccer" class="team-logo" onerror="this.style.display='none'" />
            <MudIcon Icon="@Icons.Material.Filled.SportsSoccer" Size="Size.Large" Class="logo-fallback" Style="font-size: 120px; color: #D32F2F;" />
        </div>

        <MudText Typo="Typo.h2" Class="team-name" Style="color: #1A237E; font-weight: bold; margin-bottom: 8px;">
            RAPTORS
        </MudText>
        <MudText Typo="Typo.h5" Style="color: #D32F2F; margin-bottom: 40px;">
            Soccer Club
        </MudText>

        <MudPaper Class="coming-soon-badge" Elevation="0" Style="background: linear-gradient(135deg, #D32F2F 0%, #1A237E 100%); padding: 20px 60px; border-radius: 50px;">
            <MudText Typo="Typo.h3" Style="color: white; font-weight: bold; letter-spacing: 4px;">
                COMING SOON
            </MudText>
        </MudPaper>

        <MudText Typo="Typo.body1" Class="mt-8" Style="color: #888; max-width: 400px; text-align: center;">
            We're working hard to bring you an amazing new website. Stay tuned for updates!
        </MudText>

        <div class="builders-section mt-12">
            <MudText Typo="Typo.body2" Style="color: #aaa;">
                Built with passion by
            </MudText>
            <MudText Typo="Typo.h5" Style="color: #1A237E; font-weight: bold; margin-top: 8px;">
                Benji & Gio
            </MudText>
            <div class="builder-icons mt-2">
                <MudIcon Icon="@Icons.Material.Filled.Code" Style="color: #1A237E; margin-right: 8px;" />
                <MudIcon Icon="@Icons.Material.Filled.Favorite" Style="color: #D32F2F;" />
                <MudIcon Icon="@Icons.Material.Filled.SportsSoccer" Style="color: #1A237E; margin-left: 8px;" />
            </div>
        </div>
    </div>
</div>

<style>
    .coming-soon-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, #f5f5f5 0%, #E8EAF6 100%);
        padding: 20px;
    }

    .coming-soon-content {
        text-align: center;
        animation: fadeIn 1s ease-in-out;
    }

    .logo-container {
        margin-bottom: 30px;
    }

    .team-logo {
        max-width: 200px;
        height: auto;
    }

    .logo-fallback {
        display: block;
    }

    .team-logo:not([style*="display: none"]) + .logo-fallback {
        display: none !important;
    }

    .builders-section {
        padding: 30px;
        border-top: 1px solid #e0e0e0;
    }

    .builder-icons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
